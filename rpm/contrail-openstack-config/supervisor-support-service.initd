#!/usr/bin/env bash

# chkconfig: 2345 99 01
# description: Supervisord instance for Contrail Support Services

ulimit -c unlimited
. /etc/init.d/functions

function log_success_msg() {
    success
}
function log_failure_msg() {
    failure
}

PID_FILE=/var/run/supervisord-support-service.pid

function daemon_start() {
     echo  -n "Starting Supervisor Daemon for Contrail Support Service Package"
     ulimit -s unlimited
     ulimit -c unlimited
     ulimit -d unlimited
     ulimit -v unlimited
     ulimit -n 4096
     /usr/bin/supervisord -c /etc/contrail/supervisord_support_service.conf 
     RETVAL=$?
     [ $RETVAL -eq 0 ] && log_success_msg || log_failure_msg
     if [ $RETVAL -ne 0 ]; then
        echo "supervisor-support-service start failed. checking lsof.."
        lsof | grep -i supervisord_support_service.sock
        if [ $? -eq 0 ]; then
            echo "Another program listening on same socket"
            pid=`lsof | grep -i supervisord_support_service.sock | cut -d' ' -f3`
            if [ "x$pid" != "x" ] ; then
                ps uw -p $pid
            fi
        fi
     fi
}

function daemon_stop() {
    if [ -e /tmp/supervisord_support_service.sock ]; then
        supervisorctl -s unix:///tmp/supervisord_support_service.sock stop all
        supervisorctl -s unix:///tmp/supervisord_support_service.sock shutdown
    else
        supervisorctl -s unix:///var/run/supervisord_support_service.sock stop all
        supervisorctl -s unix:///var/run/supervisord_support_service.sock shutdown
    fi
    if [ -f $PID_FILE ]; then
        kill `cat $PID_FILE`
        rm -f $PID_FILE
    fi
    if [ -e "/etc/contrail/supervisord_support_service_files/*.kill" ]
    then
        /usr/bin/supervisor_killall /etc/contrail/supervisord_support_service_files
    fi
}

daemon_status() {
    declare -f -F status > /dev/null
    if [ "$?" = "0" ]; then
        status -p $PID_FILE supervisord
    else
        declare -f -F status_of_proc > /dev/null
        if [ "$?" = "0" ]; then
            status_of_proc -p $PID_FILE supervisord support_service
        fi
    fi
}

daemon_status_q() {
    daemon_status >/dev/null 2>&1
}

case $1 in
     start)
     daemon_status_q && exit 0
     daemon_start
     ;;

     stop)
     daemon_status_q || exit 0
     daemon_stop
     ;;

     restart)
     daemon_stop
     daemon_start
     ;;

     status)
        daemon_status
     ;;
esac

