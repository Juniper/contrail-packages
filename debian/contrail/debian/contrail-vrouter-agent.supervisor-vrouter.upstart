description     "Supervisord for VNC Vrouter"

start on runlevel [2345]
stop on runlevel [016]
limit core unlimited unlimited
# For DPDK vRouter we need longer timeout to let KNI devices shut down
# gracefully
kill timeout 20

# Restart the process if it dies with a signal
# or exit code not given by the 'normal exit' stanza.
respawn

# Give up if restart occurs 10 times in 90 seconds.
respawn limit 10 90

pre-start script
    if [ -f /usr/lib/contrail/bin/vrouter-pre-start.sh ]; then
        /usr/lib/contrail/bin/vrouter-pre-start.sh
    fi
    ulimit -s unlimited
    ulimit -c unlimited
    ulimit -d unlimited
    ulimit -v unlimited
    ulimit -n 4096
end script

script
    supervisord --nodaemon -c /etc/contrail/supervisord_vrouter.conf || true
    echo "supervisor-vrouter start failed...."
    (lsof | grep -i supervisord_vrouter.sock) || true
    pid=`lsof | grep -i supervisord_vrouter.sock | cut -d' ' -f3` || true
    if [ "x$pid" != "x" ]; then
        ps uw -p $pid
    fi
end script

post-start script
    if [ -f /usr/lib/contrail/bin/vrouter-post-start.sh ]; then
        /usr/lib/contrail/bin/vrouter-post-start.sh
    fi
end script

pre-stop script
    supervisorctl -s unix:///tmp/supervisord_vrouter.sock stop all
    supervisorctl -s unix:///tmp/supervisord_vrouter.sock shutdown
    if [ -f /usr/lib/contrail/bin/vrouter-pre-stop.sh ]; then
        /usr/lib/contrail/bin/vrouter-pre-stop.sh
    fi
end script

post-stop script
    if [ -f /usr/lib/contrail/bin/vrouter-post-stop.sh ]; then
        /usr/lib/contrail/bin/vrouter-post-stop.sh
    fi
end script
